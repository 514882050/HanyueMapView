<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsz.hanyue.hanyuemapview.Fragment.InputFragment"
    android:background="#ff92ffc5">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:id="@+id/input_edit"
        android:background="@drawable/input_textview_selector"
        android:visibility="gone"
        android:inputType="number"
        android:layout_above="@+id/input_button_rootview"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/input_list_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/input_edit"
        android:choiceMode="singleChoice" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/input_button_rootview"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/input_save_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            android:layout_weight="1"
            android:background="@drawable/input_button_selector"
            android:layout_marginRight="2.5dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:id="@+id/input_send_button"
            android:layout_weight="1"
            android:background="@drawable/input_button_selector"
            android:layout_marginLeft="2.5dp" />
    </LinearLayout>
</RelativeLayout>
