<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bsz.hanyue.hanyuemapview.Fragment.InputFragment"
    android:background="#ff92ffc5">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/input_save_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:id="@+id/input_edit"
        android:layout_above="@+id/input_save_button"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:visibility="gone"
        android:inputType="number" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/input_list_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/input_edit"
        android:choiceMode="singleChoice" />
</RelativeLayout>
